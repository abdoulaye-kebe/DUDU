# Configuration de base
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Base de donn√©es MongoDB
MONGODB_URI=mongodb://localhost:27017/dudu
MONGODB_TEST_URI=mongodb://localhost:27017/dudu_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
